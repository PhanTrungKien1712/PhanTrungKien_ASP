@model IEnumerable<MyClass.Models.PostInfo>
@{
    var topic = ViewBag.Topic;
}
@if (Model.Count() != 0)
{
        <h1 class="text-center"><strong>@topic.Name</strong></h1>
        <p class="text-center">Cập nhật những tin tức mới nhất về cách phối đồ, xu hướng thời trang, bản tin khuyến mại, khai trương,...</p>
        <br />
        <div class="container">
            @foreach (var post in Model)
            {
                <div class="col-md-4 product-men single">
                    <div class="men-pro-item simpleCart_shelfItem">
                        <a href="~/@post.Slug">
                            <img class="img-responsive" src="~/Public/images/posts/@post.Img" alt=" " />
                        </a>
                        <div class="item-info-product">
                            <strong><a href="~/@post.Slug">@post.Title</a></strong>
                        </div>
                        <div style="margin: 0px 6px">
                            <p>@XString.Str_Limit(post.Detail, 200)</p>
                            <br />
                            <p><i class="glyphicon glyphicon-calendar"></i> @post.CreatedAt <i class="glyphicon glyphicon-comment"></i> 0</p>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"></div>

            <div class="swit form text-center">
                <a href="~/@topic.Slug">
                    <input type="submit" value="XEM TẤT CẢ">
                </a>
            </div>
        </div>
 }



