@model MyClass.Models.Product

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<!-- banner-bootom-w3-agileits -->
<div class="banner-bootom-w3-agileits">
    <div class="container">
        <div class="col-md-4 single-right-left ">
            <img src="~/Public/images/products/@Model.Img" class="card-img-top" alt="hinhsp" />
        </div>
        <div class="col-md-8 single-right-left simpleCart_shelfItem">
            <h3>@Model.Name</h3>
            <p>
                <strong>@string.Format("{0:0,0}", @Model.PriceSale)₫</strong>
                <del>@string.Format("{0:0,0}", @Model.Price)₫</del>
            </p>
            <div class="rating1">
                <i class="glyphicon glyphicon-star-empty"></i>
                <i class="glyphicon glyphicon-star-empty"></i>
                <i class="glyphicon glyphicon-star-empty"></i>
                <i class="glyphicon glyphicon-star-empty"></i>
                <i class="glyphicon glyphicon-star-empty"></i>
                <div class="clearfix"></div>
            </div>
            <div class="color-quality">
                <div class="color-quality-right">
                    <h5><strong>Số lượng: </strong></h5>
                    <input name="qty" value="" type="number" min="1" />
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="occasional">
                <h5><strong>Kích thước: </strong></h5>
                <div class="colr ert">
                    <label class="radio"><input type="radio" name="radio" checked=""><i></i>Size S</label>
                </div>
                <div class="colr">
                    <label class="radio"><input type="radio" name="radio"><i></i>Size M</label>
                </div>
                <div class="colr">
                    <label class="radio"><input type="radio" name="radio"><i></i>Size L</label>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="occasion-cart">
                <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">
                    <form action="@Url.Action("CartAdd","Giohang", new { productid = Model.Id})" method="post">
                        <fieldset>
                            <input type="submit" name="submit" value="Thêm vào giỏ hàng" class="button">
                        </fieldset>
                    </form>
                </div>
            </div>
            <ul class="social-nav model-3d-0 footer-social w3_agile_social single_page_w3ls">
                <li class="share">Share On : </li>
                <li>
                    <a href="#" class="facebook">
                        <div class="front"><i class="fa fa-facebook" aria-hidden="true"></i></div>
                        <div class="back"><i class="fa fa-facebook" aria-hidden="true"></i></div>
                    </a>
                </li>
                <li>
                    <a href="#" class="twitter">
                        <div class="front"><i class="fa fa-twitter" aria-hidden="true"></i></div>
                        <div class="back"><i class="fa fa-twitter" aria-hidden="true"></i></div>
                    </a>
                </li>
                <li>
                    <a href="#" class="instagram">
                        <div class="front"><i class="fa fa-instagram" aria-hidden="true"></i></div>
                        <div class="back"><i class="fa fa-instagram" aria-hidden="true"></i></div>
                    </a>
                </li>
                <li>
                    <a href="#" class="pinterest">
                        <div class="front"><i class="fa fa-linkedin" aria-hidden="true"></i></div>
                        <div class="back"><i class="fa fa-linkedin" aria-hidden="true"></i></div>
                    </a>
                </li>
            </ul>

        </div>
        <div class="clearfix"> </div>
        <!-- /new_arrivals -->
        <div class="responsive_tabs_agileits">
            <div id="horizontalTab">
                <ul class="resp-tabs-list">
                    <li>Chi tiết sản phẩm</li>
                </ul>
                <div class="resp-tabs-container">
                    <div class="tab">
                        <div class="single_page_agile_its_w3ls">
                            <p>@Html.Raw(Model.Detail)</p>
                        </div>
                    </div>
                </div>
                <ul class="resp-tabs-list">
                    <li>Mô tả sản phẩm</li>
                </ul>
                <div class="resp-tabs-container">
                    <div class="tab">
                        <div class="single_page_agile_its_w3ls">
                            <p>@Html.Raw(Model.MetaDesc)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //new_arrivals -->
        <!--/slider_owl-->
        @*@{
            var category = ViewBag.Category;
        }
        @if (Model.Count() != 0)
        {*@
        <div class="w3_agile_latest_arrivals">
            <h3 class="wthree_text_info">Sản phẩm <span>Cùng loại</span></h3>
            @*<a class="float-end position-absolute top-0 end-0" href="~/@category.Slug">Xem tất cả</a>*@
            @foreach (var product in ViewBag.ListOther)
            {
                <div class="col-md-3 product-men single">
                    <div class="men-pro-item simpleCart_shelfItem">
                        <div class="men-thumb-item">
                            <img src="~/Public/images/products/@product.Img" class="pro-image-front" alt="hinhsp" />
                            <img src="~/Public/images/products/@product.Img" class="pro-image-back" alt="hinhsp" />
                            <div class="men-cart-pro">
                                <div class="inner-men-cart-pro">
                                    <a href="~/@product.Slug" class="link-product-add-cart">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
                        <div class="item-info-product ">
                            <strong><a href="~/@product.Slug">@product.Name</a></strong>
                            <div class="info-product-price">
                                <del>@string.Format("{0:0,0}", @product.Price)₫</del>
                            </div>
                            <div class="info-product-price">
                                <strong>@string.Format("{0:0,0}", @product.PriceSale)₫</strong>
                            </div>
                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">
                                <form action="@Url.Action("CartAdd", "Giohang", new { productid = product.Id })" method="post">
                                    <input type="submit" name="submit" value="Thêm vào giỏ hàng" class="button" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--//slider_owl-->
        </div>
        @*}*@
    </div>

</div>
<!--//single_page-->
