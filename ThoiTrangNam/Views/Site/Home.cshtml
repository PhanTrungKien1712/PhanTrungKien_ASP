@model IEnumerable<MyClass.Models.Category>
@{
    ViewBag.Title = "Elite Shoppy";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<!-- slide -->
@Html.Action("Slideshow", "Module")
<!-- //slide -->
<div class="container">
    <div class="col-md-4 bb-grids bb-left-agileits-w3layouts">
        <div class="bb-left-agileits-w3layouts-inner grid">
            <figure class="effect-roxy">
                <img src="~/Public/images/bt1.jpg" alt=" " class="img-responsive" />
                <figcaption>
                    <h3><span>T</span>rẻ </h3>
                    <p>TRUNG</p>
                </figcaption>
            </figure>
        </div>
    </div>
    <div class="col-md-4 bb-grids bb-left-agileits-w3layouts">
        <div class="bb-left-agileits-w3layouts-inner grid">
            <figure class="effect-roxy">
                <img src="~/Public/images/bt2.jpg" alt=" " class="img-responsive" />
                <figcaption>
                    <h3><span>N</span>ăng </h3>
                    <p>ĐỘNG</p>
                </figcaption>
            </figure>
        </div>
    </div>
    <div class="col-md-4 bb-grids bb-left-agileits-w3layouts">
        <div class="bb-left-agileits-w3layouts-inner grid">
            <figure class="effect-roxy">
                <img src="~/Public/images/bt3.jpg" alt=" " class="img-responsive" />
                <figcaption>
                    <h3><span>Ấ</span>m </h3>
                    <p>ÁP</p>
                </figcaption>
            </figure>
        </div>
    </div>
</div>
<br />
<div class="container-fluid">
    <div class="col-md-3 bb-grids bb-left-agileits-w3layouts">
        <div class="contact">
            <p class="text-footer">
                ĐỔI TRẢ MIỄN PHÍ
            </p>
            <p class="white-w3ls text-center">
                Đổi trả trong vòng 365 ngày đối với bất kỳ lỗi sản phẩm nào khi nhận hàng
            </p>
        </div>
    </div>
    <div class="col-md-3 bb-grids bb-left-agileits-w3layouts">
        <div class="contact">
            <p class="text-footer">
                DỊCH VỤ TỪ A-Z
            </p>
            <p class="white-w3ls text-center">
                Trả hàng hoàn tiền và có bưu tá lấy hàng tận nơi khi khách hàng yêu cầu đối trả
            </p>
        </div>
    </div>
    <div class="col-md-3 bb-grids bb-left-agileits-w3layouts">
        <div class="contact">
            <p class="text-footer">
                FREESHIP TẬN NHÀ
            </p>
            <p class="white-w3ls text-center">
                Mọi đơn hàng được Miễn phí ship trên toàn quốc với Hóa đơn từ 500K trở lên
            </p>
        </div>
    </div>
    <div class="col-md-3 bb-grids bb-left-agileits-w3layouts">
        <div class="contact">
            <p class="text-footer">
                UY TÍN HÀNG ĐẦU
            </p>
            <p class="white-w3ls text-center">
                Cam kết đem đến sản phẩm giá tốt nhất thị trường với chất lượng tốt nhất
            </p>
        </div>
    </div>
</div>
<div class="new_arrivals_agile_w3ls_info">
    <div class="footer_agile_inner_info_w3l">
        <div id="horizontalTab">
            @foreach (var category in Model)
            {
                @Html.Action("HomeProduct", "Site", new { @id = category.Id })
            }
        </div>
    </div>
</div>

<!-- //new_arrivals -->
<div class="schedule-bottom">
    <div class="col-md-6 agileinfo_schedule_bottom_left">
        <img src="~/Public/images/smallbanner_img1.jpg" alt=" " class="img-responsive" />
    </div>
    <div class="col-md-6 agileits_schedule_bottom_right">
        <div class="w3ls_schedule_bottom_right_grid">
            <h3>TIẾT KIỆM TỚI <span>50%</span> TRONG TUẦN NÀY</h3>
            <p>
                Sản phẩm thời trang nam giảm giá với giá bán "chạm sàn".
                Các dòng sản phẩm sẽ được cập nhật liên trên danh mục thời trang khuyến mại của website.
            </p>
            <div class="col-md-4 w3l_schedule_bottom_right_grid1">
                <i class="fa fa-user-o" aria-hidden="true"></i>
            </div>
            <div class="col-md-4 w3l_schedule_bottom_right_grid1">
                <i class="fa fa-calendar-o" aria-hidden="true"></i>
            </div>
            <div class="col-md-4 w3l_schedule_bottom_right_grid1">
                <i class="fa fa-shield" aria-hidden="true"></i>
            </div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>
<div class="new_arrivals_agile_w3ls_info">
    @foreach (var topic in Model)
    {
        @Html.Action("HomePost", "Site", new { @id = topic.Id })
    }
</div>
<!-- /we-offer -->
<div class="sale-w3ls">
    <div class="container">
        <h6>PHIÊN BẢN <span>KHÁC BIỆT</span> ĐỂ LÀ CHÍNH MÌNH</h6>
    </div>
</div>
<!-- //we-offer -->