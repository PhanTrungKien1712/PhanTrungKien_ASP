@model IEnumerable<MyClass.Models.Topic>
<div class="community-poll">
    <div class="css-treeview">
        <h4>Chủ đề bài viết</h4>
        <ul class="tree-list-pad">
            @foreach (var topic in Model)
            {
                <li>
                    <a href="~/@topic.Slug">
                        <label for="item-0-0"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> @topic.Name</label>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
