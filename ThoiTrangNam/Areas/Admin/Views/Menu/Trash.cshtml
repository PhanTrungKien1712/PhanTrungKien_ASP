@model IEnumerable<MyClass.Models.Menu>

@{
    ViewBag.Title = "Thùng rác menu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{

    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{

    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">


    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">THÙNG RÁC MENU</strong>
                    </div>
                    <div class="col-md-6 text-right">

                        <a href="@Url.Action("Index","Menu")" class="btn-sm btn-info"><i class="fas fa-arrow-circle-left"></i> Về danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered">
                    <tr>
                        <th><input type="checkbox" name="checkId" value="" /></th>
                        <th>Tên menu</th>
                        <th>Liên kết</th>
                        <th>Kiểu menu</th>
                        <th>Vị trí</th>
                        <th>Chức năng</th>
                        <th>Id</th>
                    </tr>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="checkId" value="" /></td>
                                <td>@item.Name</td>
                                <td>@item.Link</td>
                                <td>@item.TypeMenu</td>
                                <td>@item.Position</td>
                                <td class="text-center">
                                    <a href="@Url.Action("Retrash", "Menu", new { id = item.Id })" class="btn btn-sm btn-success"><i class="fas fa-undo-alt"></i></a>
                                    <a href="@Url.Action("Delete", "Menu", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                                <td>@item.Id</td>
                            </tr>
                        }
                    }
                </table>
            </div>

            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
